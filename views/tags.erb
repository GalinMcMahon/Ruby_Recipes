<h2>Tags</h2>
<hr>
<br>

<% if @tags == [] %>

<p>There are currently no tags in the database</p>

<% else %>

<p>Current tags</p>
<ul>

  <% @tags.each() do |tag| %>

  <li><a href="/tags/<%= tag.id() %>"><%= tag.tag() %></a></li>

  <% end %>

</ul>

<% end %>

<h3> Add a tag: </h3>
<form action="/tags" method="post">
  <label for="tag">Tag:  </label>
  <input type="text" name="tag" id="tag">
  <button type="submit">Add Tag</button>
</form>
