<h1><%= @ingredient.ingredient() %></h1>
<hr><br>

<form action="/rename_ingredient/<%= @ingredient.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <input id="ingredient" name="ingredient" type="text">
  <br><br>
  <button type="submit" class="btn btn-success">Update <%= @ingredient.ingredient() %></button>
</form>
<br>

<form action="/delete_ingredient/<%= @ingredient.id %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit" class="btn btn-danger">Delete <%=@ingredient.ingredient %></button>
</form>
